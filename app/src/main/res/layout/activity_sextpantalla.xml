<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sextpantalla">

    <ImageView
        android:id="@+id/p6logo"
        android:layout_width="259dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvp6olvidecontraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Olvide contraseña"
        android:textSize="35dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <TextView
        android:id="@+id/tvp6email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digita el correo electronico con el que te registraste:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p6logo"
        app:layout_constraintVertical_bias="0.077"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvp6ingresaremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.170"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p6logo"
        app:layout_constraintVertical_bias="0.233" />

    <EditText
        android:id="@+id/etp6email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#ABDAA3"
        android:ems="10"
        android:hint="Ingrese su correo electronico"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p6logo"
        app:layout_constraintVertical_bias="0.233" />

    <TextView
        android:id="@+id/tvp6instrucciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verifica tu correo electronico y sigue los pasos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p6logo"
        app:layout_constraintVertical_bias="0.630"
        android:textSize="16dp"
        android:textStyle="normal"/>

    <Button
        android:id="@+id/brestablecer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restablecer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p6logo"
        app:layout_constraintVertical_bias="0.425"
        android:backgroundTint="@color/verde"
        android:textSize="17dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>